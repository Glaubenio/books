<div class="col s12 m6 l4 xl3">
  <div class="card">
    <div class="card-image">
      <img src="<%= book.image %>" class="book-image">
    </div>
    <div class="card-content">
      <span class="card-title book-title"><%= book.title %></span>
      <p class="truncate"><%= book.description%></p>
    </div>
    <% if current_admin.present? %>
      <div class="card-action center-align">
        <%= link_to edit_book_path(book), class: "btn waves-effect waves-light", title: 'Edit' do %>
          <i class="material-icons">edit</i>
        <% end %>
        <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red waves-effect waves-light", title: 'Delete' do %>
          <i class="material-icons ">delete</i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
